<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".home">

    <RelativeLayout
        android:id="@+id/boxMenu"
        android:layout_width="wrap_content"
        android:layout_height="559dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/back1"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="502dp"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:fontFamily="@font/amarante"
                android:text="HEY LADIES!!!"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/amita"
                android:text="Aplikasi ini dibuat untuk membantu kalian mencari informasi tentang produk makeup, dan sudah di lengkapi Video Tutorialnya juga lohhh,"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnMakeup"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_margin="22dp"
                android:background="@drawable/makeup" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>